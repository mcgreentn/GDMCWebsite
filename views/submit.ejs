<body>
    <header>
          <% include header.ejs %>

      </header>

      <div class="container">
        <main role="main" class="container">
          <h2>Submit your Settlement Generator</h2>
          <br>
          <form class="needs-validation" action="/submitgenerator" method="post" enctype="multipart/form-data" novalidate>
            <div class="form-row">
              <div class="col-md-6 mb-3">
                <label for="validationCustom01">Team Name</label>
                <input type="text" class="form-control" name="team_name" id="validationCustom03" placeholder="What is your team name?"
                  value="" required>
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>
            </div>
            <div class="form-row">
              <div class="col-md-6 mb-3">
                <label for="validationCustom01">Generator Name</label>
                <input type="text" class="form-control" name="generator_name" id="validationCustom01" placeholder="Generator Name" value="" required>
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>
              <div class="col-md-6 mb-3">
                <label>Zip File Submission</label>
                <input type="file" class="form-control-file" name="uploadMe" placeholder="" id="fileToUpload" accept=".zip" required>
              </div>
            </div>
            <div class="form-row">
              <div class="col-md-12 mb-3">
                <label>About:</label>
                <textarea class="form-control" name="about" id="validationCustom02" placeholder="Tell us about your generator technique!" align="left" rows="10" style="width: 100%; z-index: auto; position: relative; line-height: 20px; font-size: 14px; transition: none; background: transparent !important;" required></textarea>
              </div>
            </div>
            <div class="form-row">
              <div class="col-md-6 mb-3">
                <div class="form-group">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" onclick="displayChronicleBox();" name="chronicleIncluded" id="chronicleIncluded">
                    <label class="form-check-label" for="chronicleIncluded">
                      Optional: I am also participating in the new Chronicle Challenge!
                    </label>
                  </div>
                </div>
              </div>
            </div>

            <div class="form-row">
              <div class="col-md-12 mb-3">
                <label id="chronicleInstructionsLabel" style="display:none;">Instructions:</label>
                <textarea class="form-control" name="chronicleAbout" id="chronicleInstructionsAbout" placeholder="Tell us where our judges should look for your chronicle" align="left" rows="10" style="width: 100%; z-index: auto; position: relative; display: none; line-height: 20px; font-size: 14px; transition: none; background: transparent !important;"></textarea>
              </div>
            </div>
            <div class="form-row">
              <div class="col-md-6 mb-3">
                <div class="form-group">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="publishOnline">
                    <label class="form-check-label" for="publishOnline">
                      Optional: I opt-in to my code being published online!
                    </label>
                  </div>
                </div>
              </div>
              <div class="col-md-6 mb-3">
                <div class="form-group">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                    <label class="form-check-label" for="invalidCheck">
                      I accept that all work submitted therin is 100% my own or my team's.
                    </label>
                    <div class="invalid-feedback">
                      You must agree before submitting.
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-5 mb-3">
              <button class="btn btn-outline-primary btn-lg" type="submit">Submit my Gen!</button>
            </div>
          </div>
          </form>

          <script>
          // Example starter JavaScript for disabling form submissions if there are invalid fields
          (function() {
            'use strict';
            window.addEventListener('load', function() {
              // Fetch all the forms we want to apply custom Bootstrap validation styles to
              var forms = document.getElementsByClassName('needs-validation');
              // Loop over them and prevent submission
              var validation = Array.prototype.filter.call(forms, function(form) {
                form.addEventListener('submit', function(event) {
                  if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                  }
                  form.classList.add('was-validated');
                }, false);
              });
            }, false);
          })();
          </script>
        </main>
    </div>
