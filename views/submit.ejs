    <script>
      function displayChronicleBox() {
        if (document.getElementById('chronicleIncluded').checked) {
          document.getElementById('chronicleInstructionsLabel').style.display = 'block';
          document.getElementById('chronicleInstructionsAbout').style.display = 'block';
          document.getElementById('chronicleInstructionsAbout').required = true;
        } else {
          document.getElementById('chronicleInstructionsLabel').style.display = 'none';
          document.getElementById('chronicleInstructionsAbout').style.display = 'none';
          document.getElementById('chronicleInstructionsAbout').required = false;
        }
      }
    </script>
</body>
